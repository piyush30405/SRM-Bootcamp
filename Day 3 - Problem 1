MAXIMUM NO OF CUTS FOR A ROPE USINF RECURSION:

import java.util.Scanner;
class Main {
    
    public static int maxCuts(int n, int a, int b, int c){
        if (n==0) return 0;
        if(n<0) return -1;
        
        int r1 = maxCuts(n-a,a,b,c);
        int r2 = maxCuts(n-b,a,b,c);
        int r3 = maxCuts(n-c,a,b,c);
        
        int maximum = Math.max(r1,Math.max(r2,r3));
        
        if(maximum==-1) return -1;
        return maximum+1;
    }
    
    
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.println("Enter the rope length: ");
        int n=scanner.nextInt();
        System.out.println("Enter the cut length of a: ");
        int a=scanner.nextInt();
        System.out.println("Enter the cut length of b: ");
        int b=scanner.nextInt();
        System.out.println("Enter the cut length of c: ");
        int c=scanner.nextInt();
        int maxi = maxCuts(n,a,b,c);
        System.out.println("The Maximum no of cuts is: "+maxi);
    }
}
